{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA/assignedForms"
        },
        {
          "path": "$APPLOCALDATA/assignedForms/*"
        }
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "fs:default",
    "notification:default"
  ]
}